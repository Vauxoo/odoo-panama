<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record  model="ir.ui.view" id="res_partner_form_pa_localization">
            <field name="name">res.partner.form.pa.localization</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='country_id']" position="after">
                    <field name="district_id" placeholder="Distrito" options='{"no_open": True}'/>
                    <field name="township_id" placeholder="Corregimiento" options='{"no_open": True}'/>
                    <field name="hood_id" placeholder="Barrio" options='{"no_open": True}'/>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="replace">
                    <field name="state_id" class="oe_no_button" placeholder="Provincia" style="width: 37%%" options='{"no_open": True}'
                        attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
